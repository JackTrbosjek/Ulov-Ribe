<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="diplomski.ulovribe" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UnosUlovaActivity"
            android:label="@string/title_activity_unos_ulova"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diplomski.ulovribe.MainActivity" />
        </activity>
        <activity
            android:name=".PregledUlovaActivity"
            android:label="@string/title_activity_pregled_ulova"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diplomski.ulovribe.MainActivity" />
        </activity>
        <activity
            android:name=".UrediKategorijeActivity"
            android:label="@string/title_activity_uredi_kategorije"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="diplomski.ulovribe.MainActivity" />
        </activity>
    </application>

</manifest>
